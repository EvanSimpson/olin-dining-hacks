    include layout_style_include.html


    script.
      // Global for other scripts to use.
      var isMobile = /mobi/i.test(navigator.userAgent);

      // Skip iPhone URL bar.
      // http://remysharp.com/2010/08/05/doing-it-right-skipping-the-iphone-url-bar/
      if (isMobile && !location.hash) {
        setTimeout(function () {
          if (!pageYOffset) {
            window.scrollTo(0, 1);
          }
        }, 1000);
      }

